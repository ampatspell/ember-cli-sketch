{{ui-block/sketch stage=stage class="sketch" ready=(action 'ready')}}

<div class="info">
  <div class="block">
    <div>{{stage}}</div>
  </div>

  <div class="block">
    <div>{{stage.doc}}</div>
  </div>

  <div class="block">
    <div class="title">Add</div>
    <div class="actions">
      {{ui-block/button value='Center' action=(action 'center')}}
      {{ui-block/button value='Fit' action=(action 'fit')}}
    </div>
  </div>

  <div class="block">
    <div class="title">Tree</div>
    <div>
      {{#each stage.nodes as |node|}}
        <div>
          <div role="button" {{action "setGlobal" "node" node}}>{{node}}</div>
          {{#each node.nodes as |nested|}}
            <div class="pad-left">
              <div role="button" {{action "setGlobal" "node" nested}}>{{nested}}</div>
            </div>
          {{/each}}
        </div>
      {{/each}}
    </div>
  </div>

  <div class="block">
    <div class="title">Content</div>
    <div>
      {{#each stage.content as |node|}}
        <div role="button" {{action "setGlobal" "node" node}}>{{node}}</div>
      {{/each}}
    </div>
  </div>

  <div class="block">
    <div class="title">Hover</div>
    <div>
      {{#each stage.node.hover.attached as |node|}}
        <div role="button" {{action "setGlobal" "node" node.model}}>{{node.model}}</div>
      {{else}}
        None
      {{/each}}
    </div>
  </div>

  <div class="block">
    <div class="title">Selection</div>
    <div>
      {{#each stage.node.selection.attached as |node|}}
        <div role="button" {{action "setGlobal" "node" node.model}}>
          <div>{{node.model}}</div>
        </div>
      {{else}}
        None
      {{/each}}
    </div>
  </div>

  <div class="block">
    <div class="title">Add</div>
    <div class="actions">
      {{ui-block/button value='Area' action=(action 'addNode' 'area' (hash x=0 y=0 width=300 height=200))}}
      {{ui-block/button value='Red Rect' action=(action 'addNode' 'rect' (hash x=10 y=10 width=50 height=50 fill="red" opacity=0.3 rotation=2))}}
      {{ui-block/button value='Green Rect' action=(action 'addNode' 'rect' (hash x=10 y=10 width=50 height=50 fill="green" opacity=0.3 rotation=-2))}}
      {{ui-block/button value='Blue Rect' action=(action 'addNode' 'rect' (hash x=10 y=10 width=50 height=50 fill="blue" opacity=0.3 rotation=2))}}
    </div>
  </div>

</div>